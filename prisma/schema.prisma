// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String?
  Posts    Post[]
}

model Post {
  id          Int @id @default(autoincrement())
  file        String? @unique
  description String?
  price       String?
  created_at  DateTime? 
  user        User @relation(fields: [userId], references: [id])
  userId      Int
  title       String?
  directions  String?

}
